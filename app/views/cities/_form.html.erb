<%= form_with(model: city) do |form| %>
  <% if city.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(city.errors.count, "error") %> Não foi possível salvar:</h2>
      <ul>
        <% city.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name,"Nome:", style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :State_id, "Estado:", style: "display: block" %>
    <%= form.collection_select(:states_id, city.states, :id, :name, prompt: true) %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
